<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="../styles.css" />
    <title>Cart</title>
   

</head>
<body  id="bodyHome">
  <div >
    <h1 id="titleShopClient"  >CART</h1>
    <span class="hrShop"></span>
      </div>
  <%- include('../partials/navBarUser.ejs') %> 
  <% if (productos.length > 0 ) { %>
<div class="buttonsCart">
    <a href="/cart/deleteall " class=" deleteAll badge ">Delete All </a>
    <a class="totalPrice badge"> <%= precioTotal %> </a>
       <a href="/cart/buyAll " class=" buyAll badge ">Comprar </a></div>
      <div class="d-flex flex-row row ms-2 mb-5 ">
        
      <% productos.forEach((producto ,key) => { %> 
          <div class="card  m-5 cardProduct" style="width: 15rem;">
            <img src="../images/<%= producto.img %>" class=" cardImage"  width="150px" height="150px" alt="<%= producto.img %>" >
              <div class="card-body   ">
                <a  class="aLinkToProduct "href="/api/productos/producto/<%= producto._id %>"><h5 class="card-title "><%= producto.titulo %></h5></a>
                <p class="  cardDescrption"><small ><%= producto.descripcion %></small></p>
               <div class="contentPriceAndCode">
                <p class="  cardPrice">$<%= producto.precio %> </p>
                <p class=" cardCode">Cant   <%= producto.cant %></p>
               
               </div>
               <a href="/cart/deleteproduct/<%= producto._id %> " class="w-100 deleteAdmin badge "><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash iconAdmin" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
              </svg></a>
              </div>
            </div>
           
       <% }) %> 
           
          </div>
       
  <% }else{  %> 
    <div class=" ms-5 mb-5 ">
      <h1 class="  text-dark dontProductText text-opacity-10">There are no products</h1>
    </div>
  <% } %> 

</body>
</html>